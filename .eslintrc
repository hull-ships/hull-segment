{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "globals": {},
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["airbnb-base", "plugin:flowtype/recommended"],
  "settings": {
    "ecmascript": 6
  },
  "plugins": ["prettier", "flowtype"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": false,
        "arrowParens": "avoid",
        "semi": true
      }
    ],
    "flowtype/no-primitive-constructor-types": 2,
    "flowtype/no-types-missing-file-annotation": 2,
    "flowtype/require-valid-file-annotation": [
      1,
      "always",
      {
        "annotationStyle": "line"
      }
    ],
    "comma-dangle": [0],
    "max-len": [0],
    "camelcase": [0],
    "quotes": [2, "double"],
    "prefer-arrow-callback": [0],
    "new-cap": [0],
    "no-underscore-dangle": [0],
    "arrow-body-style": [0],
    "no-param-reassign": [0],
    "no-console": [0],
    "eqeqeq": [1]
  }
}
