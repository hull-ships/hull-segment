{
  "name": "hull-segment",
  "description": "Install Segment in your site",
  "version": "0.2.0",
  "homepage": "https://github.com/hull-ships/hull-segment",
  "license": "MIT",
  "main": "dist/ship.js",
  "author": {
    "name": "Hull",
    "email": "contact@hull.io",
    "url": "https://github.com/hull"
  },
  "engines": {
    "node": "8.10.x",
    "npm": "3.10.x",
    "yarn": "1.7.x"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/hull-ships/hull-segment"
  },
  "bugs": {
    "url": "https://github.com/hull-ships/hull-segment/issues"
  },
  "scripts": {
    "ngrok": "ngrok http 8082 --region eu --subdomain segment",
    "flow": "flow",
    "flow:stop": "flow stop",
    "build": "npm run clean && npm run build:server && npm run build:client",
    "build:client": "NODE_ENV=production ./node_modules/.bin/webpack --config ./webpack.config.js --progress --profile --colors",
    "build:server": "./node_modules/.bin/babel server -d lib",
    "clean": "./node_modules/.bin/rimraf dist; ./node_modules/.bin/rimraf lib",
    "start": "node -r newrelic ./lib",
    "start:dev": "./node_modules/.bin/nodemon -w server --exec ./node_modules/.bin/babel-node -- server",
    "test": "npm run test:units",
    "test:lint": "eslint server",
    "test:modules": "npm outdated --depth=0",
    "test:units": "NODE_ENV=test ./node_modules/.bin/mocha -R spec ./tests/index",
    "update": "./node_modules/.bin/updtr",
    "watch": "./node_modules/.bin/watch 'clear && npm run test:lint -s && npm run test:units -s && npm run build:client -s' server src",
    "postinstall": "npm run build"
  },
  "keywords": [
    "hull",
    "ship",
    "hull-ship"
  ],
  "dependencies": {
    "@webpack-cli/migrate": "^0.1.0",
    "analytics-node": "^3.3.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.3",
    "cache-manager-redis": "^0.6.0",
    "camelize": "^1.0.0",
    "connect": "^3.6.6",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "hull": "hull/hull-node#feature/enforce-code-style",
    "hull-client": "hull/hull-client-node#feature/enforce-code-style",
    "json-loader": "^0.5.7",
    "jwt-simple": "^0.5.1",
    "librato-node": "^5.0.2",
    "lodash": "^4.17.10",
    "minimist": "^1.2.0",
    "newrelic": "^4.7.0",
    "prettier": "^1.14.2",
    "raw-body": "^2.3.3",
    "rimraf": "^2.6.2",
    "webpack": "^4.16.5",
    "webpack-dev-middleware": "^3.1.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-flow-comments": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.26.0",
    "eslint": "^5.3.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-flowtype-errors": "^3.6.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-prettier": "^2.6.2",
    "flow-bin": "^0.78.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "sinon": "^6.1.5",
    "supertest": "^3.1.0",
    "updtr": "^2.0.0",
    "watch": "^1.0.2",
    "webpack-cli": "^3.1.0"
  }
}
